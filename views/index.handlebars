<div class="container">
  <img src="/assets/img/burger.png">
  <div id="title"><h1>Eat-Da-Burger!</h1></div>
</div>

<div class="orders">
<h2>Un-eaten burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="devoured">
<h2>Burgers that have been DEVOURED!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

<div class="form">
  <div class="add-burger-title"><h2>Add a Burger</h2></div>
  <form class="create-form">
    <div class="form-group">
      <input type="text" id="brg" name="name" placeholder="Enter Burger Name!">
    </div>
    <br>
    <button id="build" type="submit">Build the Burger!</button>
  </form>
</div>

<footer></footer>